{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": ["./src"], //adjust entry points to our npm library
  "entryPointStrategy": "expand",
  "out": "docs",
  "exclude": [
    "**/node_modules/**",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/dist/**",
    "**/build/**"
  ],
  "excludePrivate": true,
  "excludeProtected": false,
  "excludeExternals": true,
  "readme": "none", //add here library readme
  "plugin": ["typedoc-plugin-markdown"],
  "theme": "default",
  "name": "IFC Viewer - Technical Documentation",
  "includeVersion": true,
  "categorizeByGroup": true,
  "categoryOrder": ["Components", "Services", "Hooks", "Utils", "Context", "Types", "*"],
  "sort": ["source-order"],
  "treatWarningsAsErrors": false,
  "skipErrorChecking": false,
  "logLevel": "Info",
  "githubPages": true,
  "gitRevision": "production",
  "hideGenerator": false,
  "disableSources": false,
  "sourceLinkTemplate": "https://gitlab.com/<namespace>/<repo>/-/blob/{gitRevision}/{path}#L{line}",
  "compilerOptions": { "skipLibCheck": true }
}

