# NPM Configuration

# Use exact versions when installing packages
save-exact=true

# Fail on audit findings of moderate or higher
audit-level=moderate

# Don't send analytics
send-metrics=false

# Engine strict - enforce Node version
engine-strict=true

# Prefer offline - use cache when possible
prefer-offline=true

# Legacy peer deps (for compatibility with three-viewcube)
legacy-peer-deps=true

# Progress indicator
progress=true

# Fund messages
fund=false

# Update notifier
update-notifier=true

